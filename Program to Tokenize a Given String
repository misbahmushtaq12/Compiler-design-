#include <stdio.h>
#include <string.h>

int main() {
    char input[100], *token;

    printf("Enter a string: ");
    fgets(input, sizeof(input), stdin);

    // Tokenizing using space and punctuation as delimiters
    token = strtok(input, " ,;:.!?()\n");

    printf("Tokens:\n");
    while (token != NULL) {
        printf("%s\n", token);
        token = strtok(NULL, " ,;:.!?()\n");
    }

    return 0;
}
