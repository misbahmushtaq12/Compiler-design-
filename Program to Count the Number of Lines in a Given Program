include <stdio.h>

int main() {
    FILE *file;
    char filename[50];
    char ch;
    int lines = 0;

    printf("Enter the file name: ");
    scanf("%s", filename);

    file = fopen(filename, "r");

    if (file == NULL) {
        printf("Could not open the file.\n");
        return 1;
    }

    while ((ch = fgetc(file)) != EOF) {
        if (ch == '\n') {
            lines++;
        }
    }

    fclose(file);

    printf("Total number of lines: %d\n", lines + 1);
    return 0;
